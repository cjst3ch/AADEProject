<%= link_to("Admin Home", admins_path) %><br>
<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Class year</th>
      <th>Membership length</th>
      <th>Email</th>
      <th>Is Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.class_year %></td>
        <td><%= person.membership_length %></td>
        <td><%= person.email %></td>
        <td><%= person.is_admin %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

