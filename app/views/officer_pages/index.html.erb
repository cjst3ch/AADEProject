<head>
  <link rel="stylesheet" href="/assets/officer_pages.scss">
</head>
<html>
  <header></header>
<h1 style ="text-align: center;">Welcome to the Officer/Contact us Page!</h1>
  <body>
    <h2 style ="color: #ffffff; text-align: center;">This will host the list of officers and a contact form</h2>
  </body>

</html>

<table>
  <thead>
  <tr>
    <th>Position</th>
    <th>Email</th>
    <th>Year elected</th>
    <th>Description</th>
    <th>Portrait</th>
    <th>Person</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @officers.each do |officer| %>
    <tr>
      <td><%= officer.position %></td>
      <td><%= officer.email %></td>
      <td><%= officer.year_elected %></td>
      <td><%= officer.description %></td>
      <% if officer.portrait.attached? %>
      <td><%= image_tag officer.portrait.variant(resize_to_fit: [200, 200]) %></td>
      <% end %>
      <td><%= Person.find(officer.person_id).name %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= render 'contact_forms/form', contact_form: @contact_form %>