<div class="title">
  <h1>Positions</h1>
</div>

<div class="submit-button">
  <%= link_to 'New Position', new_position_path, :class => "btn btn-success"   %>
</div>

<div class="outer-table-div">
  <table class="table">
    <thead>
    <tr>
      <th scope="col" >Position</th>
      <th scope="col" >Person</th>
      <th scope="col" >Company</th>
      <th scope="col" colspan="3" style="text-align:center;" >Options</th>
    </tr>
    </thead>

    <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.position %></td>
        <td><%= position.person.name %></td>
        <td><%= position.company.name %></td>
        <td><%= link_to 'Show', position, :class => "btn btn-outline-info" %></td>
        <td><%= link_to 'Edit', edit_position_path(position), :class => "btn btn-outline-info"  %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' },
                        :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

