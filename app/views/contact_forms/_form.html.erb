<%= form_with(model: contact_form) do |form| %>
  <% if contact_form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact_form.errors.count, "error") %> prohibited this contact_form from being saved:</h2>

      <ul>
        <% contact_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contact_row">
  <div class="field">
    <%= form.label :person_id %>
    <%= form.select :person_id, Person.joins(:officer).order(:person_id).map { |person| [person.name, person.id] }, include_blank: true, id: "id_of_the_person_id_select_box" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message, :cols => 30, :rows => 10 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
  </div>
<% end %>
